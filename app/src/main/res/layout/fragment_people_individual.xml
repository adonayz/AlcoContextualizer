<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wpi.alcoholcontextualizer.fragments.people.IndividualPeopleFragment">


    <TextView
        android:id="@+id/pictogram_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pictogram_description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <ListView
        android:id="@+id/listView_pictogram"
        android:layout_below="@id/pictogram_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Individual" />

</RelativeLayout>
